<test name="dhcp">
  <label>DHCP Test</label>
  <description>
    Verify that the networks DHCP server is running and properly issuing
    IP addresses.
  </description>
  <command>
    <exec>preflight</exec>
    <arg>-v</arg>
    <arg>--dhcp-test</arg>
  </command>
  <results>
    <result exit="0">
      <status>Success</status>
      <msg>The test was successful.</msg>
    </result>
    <result exit="128">
      <status>Error</status>
      <msg>Network access failure.</msg>
    </result>
    <result exit="130">
      <status>Error</status>
      <msg>Timeout waiting for network response.</msg>
    </result>
    <result exit="133">
      <status>Error</status>
      <msg>Multiple DHCP servers detected.</msg>
    </result>
    <result exit="134">
      <status>Error</status>
      <msg>Unrecognized response received.</msg>
    </result>
    <result exit="135">
      <status>Error</status>
      <msg>DHCP DISCOVER was rejected.</msg>
    </result>
    <result exit="136">
      <status>Error</status>
      <msg>DHCP REQUEST was rejected.</msg>
    </result>
    <result exit="137">
      <status>Error</status>
      <msg>Missing mandatory DHCP configuration parameters.</msg>
    </result>
  </results>
</test>
