BUILDDIR = build/$(MACHTYPE)-$(OSTYPE)
LIBDIR = ./

CPP= g++
CFLAGS =  -I../../include -DXP_UNIX -DJSFILE -I.
LDFLAGS = -L$(LIBDIR)


OBJS = \
	$(BUILDDIR)/tel_null.o


all: $(BUILDDIR) $(OBJS) libtel.a

clean:
	-rm -rf $(BUILDDIR)
	-rm *~
	-rm #*


libtel.a: $(OBJS)
	ar cr $(LIBDIR)/libtel.a $(OBJS)

$(BUILDDIR):
	mkdir -p $(BUILDDIR)


$(BUILDDIR)/%.o : %.cpp
	$(CPP) -c $(CFLAGS) $(CPPFLAGS) -o $@ $<

$(BUILDDIR)/%.o : %.c
	$(CC) -c $(CFLAGS)  -o $@ $<
