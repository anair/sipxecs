<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="org.sipfoundry.sipxconfig.device" default-lazy="false">
  <!-- D I S C O V E R E D   D E V I C E -->
  <class name="DiscoveredDevice" table="discovered_devices">
	<id name="macAddress" column="mac_address" type="string"/>
	<timestamp name="lastSeen" column="last_seen" source="db"/>
    <property name="ipAddress" column="ip_address"/>
    <property name="vendor" column="vendor"/>
  </class>

  <query name="devices">
    <![CDATA[from DiscoveredDevice]]>
  </query>

</hibernate-mapping>
